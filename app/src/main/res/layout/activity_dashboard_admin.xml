<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".Activity.DashboardAdminActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar01">

        <!--ImageButton: Open Profile-->
        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_person_black" />

        <!--Title-->
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Dashboard Admin"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!--Sub title-->
        <TextView
            android:id="@+id/subtitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:layout_centerHorizontal="true"
            android:text="abc@example.com"
            android:textColor="@color/black" />

        <!--logout btn-->
        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_logout_black" />

    </RelativeLayout>

    <!--Slider Images-->
    <androidx.cardview.widget.CardView
        android:id="@+id/imagesCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRl"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imagesTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Images"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/imageNextBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next_gray"
                android:background="@drawable/shape_button02"/>

        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

    <!--Category-->
    <androidx.cardview.widget.CardView
        android:id="@+id/categoryCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagesCv"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/categoryNextBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next_gray"
                android:background="@drawable/shape_button02"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--Feedback-->
    <androidx.cardview.widget.CardView
        android:id="@+id/feedbackCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryCv"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feedbackTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/feedbackNextBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next_gray"
                android:background="@drawable/shape_button02"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--Feedback-->
    <androidx.cardview.widget.CardView
        android:id="@+id/ordersCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedbackCv"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ordersTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/ordersNextBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next_gray"
                android:background="@drawable/shape_button02"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>